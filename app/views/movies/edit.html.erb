<div class="container">
  <h1>Edit <%= @movie.title %></h1>

  <%= form_tag "/movies/#{@movie.id}", method: :patch do %>
    <div class="form-group">
      <%= label_tag :title %>
      <%= text_field_tag(:title, "#{@movie.title}", {class: "form-control", placeholder: "Enter title"})%>
    </div>
    <div class="form-group">
      <%= label_tag :description %>
      <%= text_field_tag :description, "#{@movie.description}", class: "form-control", placeholder: "Enter description" %>
    </div>
    <div class="form-group">
      <%= label_tag :image %>
      <%= text_field_tag :image, "#{@movie.image_url}", class: "form-control", placeholder: "Enter the URL of an image" %>
    </div>
    <div class="form-group">
      <%= label_tag :duration %>
      <%= text_field_tag :duration, "#{@movie.duration}", class: "form-control", placeholder: "Enter number of minutes" %>
    </div>
    <div>
      <%= button_tag 'Edit movie', class: "btn btn-default" %>
    </div>
  <% end %>

  <%= link_to 'Back', movies_path %>
</div>

<%= link_to 'Show', @movie %> |
<%= link_to 'Back', movies_path %>
</div>
