<div class="container">
  <h1>New Movie</h1>

  <%= form_tag '/movies', method: :post do %>
    <div class="form-group">
      <%= label_tag :title %>
      <%= text_field_tag(:title, nil, {class: "form-control", placeholder: "Enter title"})%>
    </div>
    <div class="form-group">
      <%= label_tag :description %>
      <%= text_field_tag :price, nil, class: "form-control", placeholder: "Enter description" %>
    </div>
    <div class="form-group">
      <%= label_tag :image %>
      <%= text_field_tag :image, nil, class: "form-control", placeholder: "Enter the URL of an image" %>
    </div>
    <div class="form-group">
      <%= label_tag :duration %>
      <%= text_field_tag :duration, nil, class: "form-control", placeholder: "Enter number of minutes" %>
    </div>
    <div>
      <%= button_tag 'create movie', class: "btn btn-default" %>
    </div>
  <% end %>

  <%= link_to 'Back', movies_path %>
</div>